<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- <link rel="stylesheet" href="./output.css" /> -->
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title><%= pageTitle %></title>
  </head>
  <body class="font-[arial]">
    <%- include('../partials/nav') %>
    <main class="flex flex-col items-center mt-8">
      <div
        class="w-[90%] h-24 flex justify-center items-center rounded-lg shadow-lg p-6 mb-6"
      >
        <span class="text-4xl font-semibold text-[#FF385C]">
          Hey Host! Here are your Homes List
        </span>
      </div>

      <hr class="w-[90%] mb-6" />

      <div class="w-[90%] bg-white p-6 rounded-lg shadow-lg">
        <p class="text-2xl font-semibold mb-4 text-[#333]">
          Registered Homes List
        </p>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% registeredHomes.forEach((home) => { %>
          <div
            class="bg-white border rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300"
          >
            <img
              src="<%= home.imageUrl %>"
              alt="House Image"
              class="w-full h-48 object-cover"
            />
            <div class="p-4">
              <h2 class="text-xl font-bold text-[#FF385C] mb-2">
                <%= home.houseName %>
              </h2>
              <p class="text-gray-600 mb-1">
                <strong>Location:</strong> <%= home.location %>
              </p>
              <p class="text-gray-600 mb-1">
                <strong>Price:</strong> Rs.<%= home.price %> / night
              </p>
              <p class="text-yellow-500 mb-3">
                <strong>Rating:</strong> ‚≠ê <%= home.rating %> / 5
              </p>

              <!-- Button container -->
              <div class="flex gap-3">
                <a href="/host/edit-home/<%= home.id %>?editing=true">
                  <button
                    class="px-4 py-2 bg-blue-500 text-white text-sm font-medium rounded-lg shadow hover:bg-blue-600 transition"
                  >
                    Edit
                  </button></a
                >
                <form action="/host/delete-home/<%= home.id %>" method="POST">
                  <button
                    class="px-4 py-2 bg-red-500 text-white text-sm font-medium rounded-lg shadow hover:bg-red-600 transition"
                  >
                    Delete
                  </button>
                </form>
              </div>
            </div>
          </div>

          <% }) %>
        </div>
      </div>
    </main>
  </body>
</html>
